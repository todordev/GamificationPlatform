<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>MOD_GAMIFICATIONACTIVITIES</name>
	<author>Todor Iliev</author>
	<copyright>Copyright (C) 2013 Todor Iliev ( ITPrism.com )</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>todor@itprism.com</authorEmail>
	<authorUrl>http://itprism.com</authorUrl>
	<version>1.2</version>
	<creationDate>18 October, 2013</creationDate>
	<description><![CDATA[
    <p>Gamification Activities is a module that displays last user activites.</p>
    <p>Invest in the extension and help for its improvement. You can <a href="http://itprism.com/sponsorship" target="_blank">sponsor the extension via SMS, PayPal or Bitcoin</a>.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive <strong>gifts</strong>, <strong>discount codes</strong>, information about <strong>updates</strong> and information about <strong>new ITPrism extensions</strong>.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/e-commerce/credits-a-point-systems/23872" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_gamificationactivities.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_gamificationactivities.sys.ini</language>
	</languages>

	<help url="MOD_GAMIFICATIONACTIVITIES_HELP_URL" />

	<files>
		<filename module="mod_gamificationactivities">mod_gamificationactivities.php</filename>
		<folder>tmpl</folder>
		<filename>index.html</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">

                <field name="name_linkable" type="radio" class="btn-group"
                    label="MOD_GAMIFICATIONACTIVITIES_NAME_LINKABLE" 
                    description="MOD_GAMIFICATIONACTIVITIES_NAME_LINKABLE_DESC"
                    default="1">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field name="results_number" type="text"
                    label="MOD_GAMIFICATIONACTIVITIES_RESULTS_NUMBER" 
                    description="MOD_GAMIFICATIONACTIVITIES_RESULTS_NUMBER_DESC"
                    default="10" />
                    
			</fieldset>

            <fieldset name="integration" label="MOD_GAMIFICATIONACTIVITIES_INTEGRATION_OPTIONS" >
                <field name="integrate" type="list"
                    label="MOD_GAMIFICATIONACTIVITIES_INTEGRATE" 
                    description="MOD_GAMIFICATIONACTIVITIES_INTEGRATE_DESC"
                    default="none">
                    <option value="none">MOD_GAMIFICATIONACTIVITIES_NONE</option>
                    <option value="socialcommunity">MOD_GAMIFICATIONACTIVITIES_SOCIAL_COMMUNITY</option>
                    <option value="kunena">MOD_GAMIFICATIONACTIVITIES_KUNENA</option>
                    <option value="gravatar">MOD_GAMIFICATIONACTIVITIES_GRAVATAR</option>
                    <option value="jomsocial">MOD_GAMIFICATIONACTIVITIES_JOMSOCIAL</option>
                </field>
                
                <field name="avatar_size" type="text"
                    label="MOD_GAMIFICATIONACTIVITIES_AVATAR_SIZE" 
                    description="MOD_GAMIFICATIONACTIVITIES_AVATAR_SIZE_DESC"
                    default="50" />
            </fieldset>

            <fieldset name="advanced">
                <field name="moduleclass_sfx" type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field name="cache" type="list" default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time" type="text" default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
		</fields>
	</config>
</extension>