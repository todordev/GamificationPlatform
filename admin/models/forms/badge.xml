<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="title" type="text"
               label="COM_GAMIFICATION_TITLE"
               description="COM_GAMIFICATION_BADGE_TITLE_DESC"
               size="40"
               filter="trim"
               required="true"
                />

        <field name="points" type="text"
               label="COM_GAMIFICATION_POINTS"
               description="COM_GAMIFICATION_BADGE_POINTS_DESC"
               filter="int"
                />

        <field name="points_id" type="gfypoints"
               label="COM_GAMIFICATION_POINTS_TYPE"
               description="COM_GAMIFICATION_BADGE_POINTS_TYPE_DESC"
               filter="int"
                >
            <option value="0">COM_GAMIFICATION_SELECT_POINTS_TYPE</option>
        </field>

        <field name="image" type="file"
               label="COM_GAMIFICATION_IMAGE"
               description="COM_GAMIFICATION_BADGE_IMAGE_DESC"
                />

        <field name="title" type="text"
               label="COM_GAMIFICATION_NOTE"
               description="COM_GAMIFICATION_NOTE_DESC"
               size="40"
               filter="trim"
                />

        <field name="group_id" type="gfygroups"
               label="COM_GAMIFICATION_GROUP"
               description="COM_GAMIFICATION_BADGE_GROUP_DESC"
               size="1"
               filter="intval"
               required="true"
                />

        <field name="published" type="list"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               size="1"
               filter="intval"
               default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="description" type="textarea"
               label="COM_GAMIFICATION_DESCRIPTION"
               description="COM_GAMIFICATION_DESCRIPTION_DESC"
               filter="trim"
               />

        <field name="note" type="textarea"
               label="COM_GAMIFICATION_NOTE"
               description="COM_GAMIFICATION_NOTE_DESC"
               filter="trim"
                />

        <field name="id" type="text" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               readonly="true"
               default="0"
                />

    </fieldset>
</form>